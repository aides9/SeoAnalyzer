@model HomeViewModel

@{ ViewData["Title"] = "Home"; }

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary()
    <form asp-action="Result">
        <div class="form-group row">
            @Html.LabelFor(model => model.Text, new { @class = "control-label col-md-5" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Text, new { @class = "form-control col-md-12" })
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.IsUrl, new { @class = "control-label col-md-1" })
            <div class="col-md-1">
                @Html.CheckBoxFor(model => model.IsUrl, new { @class = "form-check-input" })
            </div>

            @Html.LabelFor(model => model.UseStopWords, new { @class = "control-label col-md-1" })
            <div class="col-md-1">
                @Html.CheckBoxFor(model => model.UseStopWords, new { @class = "form-check-input" })
            </div>

            @Html.LabelFor(model => model.CalculateFrequency, new { @class = "control-label col-md-1" })
            <div class="col-md-1">
                @Html.CheckBoxFor(model => model.CalculateFrequency, new { @class = "form-check-input" })
            </div>

            @Html.LabelFor(model => model.IncludeMetaData, new { @class = "control-label col-md-1" })
            <div class="col-md-1">
                @Html.CheckBoxFor(model => model.IncludeMetaData, new { @class = "form-check-input" })
            </div>

            @Html.LabelFor(model => model.IncludeExternalLinks, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-1">
                @Html.CheckBoxFor(model => model.IncludeExternalLinks, new { @class = "form-check-input" })
            </div>
        </div>

        <div class="form-group">
            <input type="submit" asp-action="Result" value="Submit" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
